<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="MainPane" prefHeight="811.0" prefWidth="1440.0" scaleShape="false" styleClass="pane"
            stylesheets="@stylesheets/MainMenuStylesheet.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLControlers.MainMenuController">
    <Button fx:id="NewGameB" layoutX="52.0" layoutY="378.0" mnemonicParsing="false" prefHeight="49.0"
            prefWidth="190.0" stylesheets="@stylesheets/MainMenuStylesheet.css" text="New Game"/>
    <Button fx:id="QuitB" layoutX="52.0" layoutY="675.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="190.0"
            stylesheets="@stylesheets/MainMenuStylesheet.css" text="Quit"/>
    <Button fx:id="CreditsB" layoutX="52.0" layoutY="477.0" mnemonicParsing="false" prefHeight="49.0"
            prefWidth="190.0" stylesheets="@stylesheets/MainMenuStylesheet.css" text="Credits"/>
    <AnchorPane fx:id="CreditsPane" layoutX="826.0" layoutY="-800.0" prefHeight="600.0" prefWidth="400.0"
                styleClass="anchor" stylesheets="@stylesheets/MainMenuStylesheet.css">
        <Label layoutX="100.0" layoutY="90.0" style="-fx-font-size: 33;" styleClass="label-red"
               text="Created by"/>
        <Label layoutX="100.0" layoutY="180.0" style="-fx-font-size: 38;" styleClass="label-white"
               text="Radoslaw"/>
        <Label layoutX="50.0" layoutY="270.0" style="-fx-font-size: 38;" styleClass="label-white"
               text="Radziukiewicz"/>
    </AnchorPane>
    <Button fx:id="HowToPlayB" layoutX="52.0" layoutY="576.0" mnemonicParsing="false" prefHeight="49.0"
            prefWidth="190.0" text="How To Play"/>
    <AnchorPane fx:id="HowToPlayPane" layoutX="826.0" layoutY="-1200.0" prefHeight="600.0" prefWidth="400.0"
                styleClass="anchor" stylesheets="@stylesheets/MainMenuStylesheet.css">
        <Label layoutX="130.0" layoutY="90.0" style="-fx-font-size: 33;" styleClass="label-red" text="Target"/>
        <Label layoutX="100.0" layoutY="130.0" style="-fx-font-size: 22;" styleClass="label-white"
               text="Kill the enemy"/>
        <Label layoutX="100.0" layoutY="230.0" style="-fx-font-size: 33;" styleClass="label-red"
               text="Movement"/>
        <Label layoutX="100.0" layoutY="270.0" style="-fx-font-size: 22;" styleClass="label-white"
               text="A, ←   move left"/>
        <Label layoutX="100.0" layoutY="310.0" style="-fx-font-size: 22;" styleClass="label-white"
               text="D, →   move right"/>
        <Label layoutX="100.0" layoutY="350.0" style="-fx-font-size: 22;" styleClass="label-white"
               text="W, ↑   jump"/>
        <Label layoutX="100.0" layoutY="390.0" style="-fx-font-size: 22;" styleClass="label-white"
               text="V, 1     grab weapon"/>
        <Label layoutX="100.0" layoutY="430.0" style="-fx-font-size: 22;" styleClass="label-white"
               text="B, 3    shoot"/>
        <Label layoutX="100.0" layoutY="470.0" style="-fx-font-size: 22;" styleClass="label-white"
               text="N, 5    open doors"/>
    </AnchorPane>

</AnchorPane>
